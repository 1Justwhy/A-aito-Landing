    <script>
        document.getElementById('pixButton').addEventListener('click', function(e) {
            e.preventDefault();
            
            const chavePix = '55247025000186';
            
            navigator.clipboard.writeText(chavePix).then(() => {
                showNotification('‚úÖ Chave PIX copiada!');
            }).catch(() => {
                alert(`Chave PIX: ${chavePix}\n\nCopie a chave acima para realizar o pagamento.`);
            });
        });

        function showNotification(message) {
            const notification = document.createElement('div');
            notification.className = 'copied-notification';
            notification.textContent = message;
            document.body.appendChild(notification);

            setTimeout(() => {
                notification.style.animation = 'slideDown 0.5s ease-out reverse';
                setTimeout(() => {
                    document.body.removeChild(notification);
                }, 500);
            }, 2500);
        }
    </script>
